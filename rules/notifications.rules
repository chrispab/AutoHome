
rule "zone3 lights on"
when
    Item Zone3LightStatus changed from OFF to ON
then
    CT_FairyLights433Socket.sendCommand(OFF)
    sendNotification("cbattisson@gmail.com", "z3 light on")
    logInfo("RULE", "Z3 lights - on")

    createTimer(now.plusSeconds(2), [|
        CT_FairyLights433Socket.sendCommand(ON)
    ])
    
