rule "StartUp Our Bedroom Heating"
when
    System started
then
    if (J_BR_Heating_Mode ==   (NULL)) {
        J_BR_Heating_Mode.postUpdate(2)
    }
end
// 
rule "J_BR_Heating mode notify changed"
when
    Item J_BR_Heating_Mode changed 
then
        //say("Elsie Bedroom heating mode changed")
end 
// 
rule "J_BR_Heating Control"
when
    Item J_BR_Heating_Mode changed or
    Item J_BR_Heating_Setpoint changed or
    Item J_BR_Temperature changed
then
    // 0="Off", 1="On", 2="Auto"
    if (J_BR_Heating_Mode.state == 0) {
        J_BR_Heating.sendCommand(OFF)
        J_BR_Heating.postUpdate(OFF)
        //say("Elsie bedroom radiator off")
    }
    else if (J_BR_Heating_Mode.state == 1) {
        J_BR_Heating.sendCommand(ON)
        J_BR_Heating.postUpdate(ON)
        //say("Elsie bedroom radiator on")
    }
    else if (J_BR_Heating_Mode.state == 2) {

            // get the current setpoint for the nursery
            var Number setpoint = J_BR_Heating_Setpoint.state as DecimalType

            // calculate the turn on/off temperatures
            var Number turnOnTemp = setpoint  //- 0.1
            var Number turnOffTemp = setpoint

            var Number temp = J_BR_Temperature.state as DecimalType

            // determine whether we need to turn on/off the heater
            if (temp < turnOnTemp) {
                // turn on temp has been reached so switch on the heater
                J_BR_Heating.sendCommand(ON)
                J_BR_Heating.postUpdate(ON)
                //say("Elsie bedroom radiator on")
            }
            else if (temp >= turnOffTemp) {
                // turn off temp has been reached so switch off the heater
                J_BR_Heating.sendCommand(OFF)
                J_BR_Heating.postUpdate(OFF)
                //say("Elsie bedroom radiator off")
            }
    }
end
