rule "StartUp J_BR_Heating"
when
    System started
then
    if (J_BR_Heating_Mode == NULL) {
        J_BR_Heating_Mode.postUpdate(2) // start in master auto control mode
    }
end

rule "J_BR_ heating"
when
    Item J_BR_Heating_Mode changed or
    Item J_BR_Heating_Setpoint changed or
    Item J_BR_Temperature changed
then
    //0=Off, 1=On (local setpoint), 2=Auto (follows program), 3=Boost (1 Hour On)
    if (J_BR_Heating_Mode.state == 0) {
        J_BR_Heating.sendCommand(OFF)
        J_BR_Heating.postUpdate(OFF)
    }
    else if ( (J_BR_Heating_Mode.state == 1) || (J_BR_Heating_Mode.state == 2) )  { //auto
        var Number setpoint = J_BR_Heating_Setpoint.state as DecimalType
        var Number turnOnTemp = setpoint //- 0.2// calculate the turn on/off temperatures
        var Number turnOffTemp = setpoint //+ 0.1
        var Number temp = J_BR_Temperature.state as DecimalType // get the current temperature
        if (temp >= turnOffTemp) {  // determine whether we need to turn on/off the heater
            J_BR_Heating.sendCommand(OFF)
            J_BR_Heating.postUpdate(OFF)
        }else if (temp < turnOnTemp) {
            J_BR_Heating.sendCommand(ON)
            J_BR_Heating.postUpdate(ON)
        } 
    }
end