rule "System started elsie_Heating"
when
    System started
then
    if (elsie_Heating_Mode == NULL) {
        elsie_Heating_Mode.postUpdate(2) // start in master auto control mode
    }
end

rule "elsie_ heating"
when
    Item elsie_Heating_Mode changed or
    Item elsie_TargetTemperature changed or
    Item elsie_CurrentTemperature changed
then
    //0=Off, 1=On (local setpoint), 2=Auto (follows program), 3=Boost (1 Hour On)
    if (elsie_Heating_Mode.state == 0) {
        elsie_Heating.sendCommand(OFF)
        elsie_Heating.postUpdate(OFF)
    }
    else if ( (elsie_Heating_Mode.state == 1) || (elsie_Heating_Mode.state == 2) )  { //auto
        var Number setpoint = elsie_TargetTemperature.state as DecimalType
        var Number turnOnTemp = setpoint //- 0.2// calculate the turn on/off temperatures
        var Number turnOffTemp = setpoint //+ 0.1
        var Number temp = elsie_CurrentTemperature.state as DecimalType // get the current temperature
        if (temp >= turnOffTemp) {  // determine whether we need to turn on/off the heater
            elsie_Heating.sendCommand(OFF)
            elsie_Heating.postUpdate(OFF)
        }else if (temp < turnOnTemp) {
            elsie_Heating.sendCommand(ON)
            elsie_Heating.postUpdate(ON)
        } 
    }
end