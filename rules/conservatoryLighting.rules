rule "Turn ON conservatory lights via proxy"
when
    Item conservatoryLightsProxy changed from OFF to ON
then
    logInfo("RULE", "Turn ON the Conservatory lights via proxy")
    gConservatoryFairyLights.sendCommand(ON)
    gConservatoryFairyLights.postUpdate(ON)
end


rule "Turn OFF conservatory lights via proxy"
when
    Item conservatoryLightsProxy changed from ON to OFF 
then
    logInfo("RULE", "Turn OFF Conservatory lights via proxy")
    gConservatoryFairyLights.sendCommand(OFF)
    gConservatoryFairyLights.postUpdate(OFF)
    ZbColourBulb01Switch.sendCommand(OFF)
end


