rule "StartUp _Heating"
when
    System started
then
    if (_Heating_Mode == NULL) {
        _Heating_Mode.postUpdate(2) // start in master auto control mode
    }
        if (_Heating_Mode == 0 ){
        _Heating_Mode.postUpdate("Off") // start in master auto control mode
    }
end

rule " heating"
when
    Item _Heating_Mode changed or
    //Item _Heating_Setpoint changed or
    Item _TargetTemperature changed or
    Item _CurrentTemperature changed
then
    //0=Off, 1=On (local setpoint), 2=Auto (follows program), 3=Boost (1 Hour On)
    if (_Heating_Mode.state == 0) {
        _Heating.sendCommand(OFF)
        _Heating.postUpdate(OFF)
    }
    else if ( (_Heating_Mode.state == 1) || (_Heating_Mode.state == 2) )  { //auto
        var Number setpoint = _TargetTemperature.state as DecimalType
        var Number turnOnTemp = setpoint //- 0.2// calculate the turn on/off temperatures
        var Number turnOffTemp = setpoint //+ 0.1
        var Number temp = _CurrentTemperature.state as DecimalType // get the current temperature
        if (temp >= turnOffTemp) {  // determine whether we need to turn on/off the heater
            _Heating.sendCommand(OFF)
            _Heating.postUpdate(OFF)
        }else if (temp < turnOnTemp) {
            _Heating.sendCommand(ON)
            _Heating.postUpdate(ON)
        } 
    }
end