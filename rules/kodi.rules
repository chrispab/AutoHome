//Kodi conservatory
rule "Pause Kodi"
when
     Item pauseKodiConProxy received update 
then
    kodiCon_control.sendCommand(PAUSE)
end

rule "Shutdown Conservatory Kodi Pi Host"
when
     Item shutdownKodiConProxy received update 
then
    kodiCons_systemcommand.sendCommand("Shutdown")

end

//Kodi Master Bedroom
rule "Pause Kodi Master Bedroom"
when
     Item pauseKodiMBProxy received update 
then
    kodiMB_control.sendCommand(PAUSE)
end

rule "Shutdown Master Bedroom Kodi Pi Host"
when
     Item shutdownKodiMBProxy received update 
then
    kodiMB_systemcommand.sendCommand("Shutdown")

end

