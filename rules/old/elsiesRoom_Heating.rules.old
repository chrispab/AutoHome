rule "elsie_ heating"
when
    Item ER_HeatingMode changed or
    Item ER_TemperatureSetpoint changed or
    Item ER_Temperature changed
then
    //0=Off, 1=On (local setpoint), 2=Auto (follows program), 3=Boost (1 Hour On)
    if (ER_HeatingMode.state == "off") {
        ER_Heater.sendCommand(OFF)
        ER_Heater.postUpdate(OFF)
    }
    else if ( (ER_HeatingMode.state == "auto") || (ER_HeatingMode.state == "manual") )  { //auto
        var Number setpoint = ER_TemperatureSetpoint.state as DecimalType
        var Number turnOnTemp = setpoint //- 0.2// calculate the turn on/off temperatures
        var Number turnOffTemp = setpoint //+ 0.1
        var Number temp = ER_Temperature.state as DecimalType // get the current temperature
        if (temp >= turnOffTemp) {  // determine whether we need to turn on/off the heater
            ER_Heater.sendCommand(OFF)
            ER_Heater.postUpdate(OFF)
        }else if (temp < turnOnTemp) {
            ER_Heater.sendCommand(ON)
            ER_Heater.postUpdate(ON)
        } 
    }
end