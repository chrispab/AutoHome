rule "System started Bedroom_Heating"
when
    System started
then
    if (BR_HeatingMode == NULL) {
        BR_HeatingMode.postUpdate(2) // start in master auto control mode
    }
end

rule "bedroom_ heating"
when
    Item BR_HeatingMode changed or
    Item BR_TemperatureSetpoint changed or
    Item BR_Temperature changed
then
    //0=Off, 1=On (local setpoint), 2=Auto (follows program), 3=Boost (1 Hour On)
    if (BR_HeatingMode.state == "off") {
        BR_Heater.sendCommand(OFF)
        BR_Heater.postUpdate(OFF)
    }
    else if ( (BR_HeatingMode.state == "auto") || (BR_HeatingMode.state == "manual") )  { //auto
        var Number setpoint = BR_TemperatureSetpoint.state as DecimalType
        var Number turnOnTemp = setpoint //- 0.2// calculate the turn on/off temperatures
        var Number turnOffTemp = setpoint //+ 0.1
        var Number temp = BR_Temperature.state as DecimalType // get the current temperature
        if (temp >= turnOffTemp) {  // determine whether we need to turn on/off the heater
            BR_Heater.sendCommand(OFF)
            BR_Heater.postUpdate(OFF)
        }else if (temp < turnOnTemp) {
            BR_Heater.sendCommand(ON)
            BR_Heater.postUpdate(ON)
        } 
    }
end