# Create a symlink /dev/dvb/adapterhd0 pointing to wintv dualhd tuner 0
SUBSYSTEM=="dvb", ATTR{idVendor}=="2040", ATTR{idProduct}=="0265", ATTR{urbnum}=="776039", SYMLINK+="adapterhd0"

# Create a symlink /dev/dvb/adapterhd1 pointing to wintv dualhd tuner 1
SUBSYSTEM=="dvb", ATTR{idVendor}=="2040", ATTR{idProduct}=="0265", ATTR{urbnum}=="811273", SYMLINK+="adapterhd1"


