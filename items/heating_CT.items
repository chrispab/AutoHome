Group                   gThermostats


//thermostat
Group                   gCT_Thermostat  "Conservatory Thermostat"
                        (gThermostats)
                        {ga="Thermostat" [modes="off=OFF:WINDOW_OPEN,heat=COMFORT:BOOST,eco=ECO,on=ON,auto", thermostatTemperatureRange="10,30", useFahrenheit=false, roomHint="Conservatory" ]}
String                  CT_ThermostatMode   "Conservatory Thermostat Mode" <settings>
                        (gCT_Thermostat, gThermostatModes)
                        {ga="thermostatMode"}
Number:Temperature      CT_ThermostatTemperatureSetpoint "Conservatory  Thermostat Setpoint" <heating>
                        (gChart_Minute, gCT_Thermostat, gThermostatTemperatureSetpoints)
                        {ga="thermostatTemperatureSetpoint"}
Number:Temperature      CT_ThermostatTemperatureAmbient "Conservatory Temperature" <temperature>
                        (gChart_Minute, gCT_Thermostat, gThermostatTemperatureAmbients)
                        {ga="thermostatTemperatureAmbient"}
Number:Dimensionless    CT_ThermostatHumidityAmbient     "Conservatory Humidity"      <humidity>
                        (gChart_Minute, gCT_Thermostat, gThermostatHumidityAmbients)
                        {unit="%", ga="thermostatHumidityAmbient", channel="mqtt:topic:conservatoryRadThermoValve:humidity"}

//var for reading and smoothing temperature readings
Number:Temperature      CT_ThermostatTemperatureAmbient_raw "Conservatory Temperature raw" <temperature>
                        {channel="mqtt:topic:conservatoryRadThermoValve:temperature"}

//heater
Switch               CT_Heater_Control "Conservatory Heater" <my_radiator>               (gChart_Minute, gHeaterControls, gAnyRoomHeaterOn) {channel="mqtt:topic:conservatoryRadThermoValve:powerSwitch", channel="mqtt:topic:kitchenRadThermoValve:powerSwitch"}
String               CT_Heater_Mode "Conservatory Heating Mode" <settings>       (gHeatingModes)
String               CT_Heater_Reachable "Conservatory Reachable" <qualityofservice> (gHeaterReachables) {channel="mqtt:topic:conservatoryRadThermoValve:reachable"}
Number:Dimensionless CT_Heater_Rssi "CT RTV RSSI" <qualityofservice>                               {channel="mqtt:topic:conservatoryRadThermoValve:rssi"}

//boost
Switch      CT_Boost "Conservatory Heater boost" <my_radiator> (gHeaterBoosters,gAnyRoomHeaterOn,gHeaterControls)
Switch      v_CT_Boost  "Conservatory virtual Heater boost"
Number:Time CT_Boost_Countdown "CT_Boost_Countdown"
